        <!-- Cột phải: Thông tin chi tiết nhân viên -->
        <VBox prefWidth="480" spacing="20" styleClass="employee-details-section" HBox.hgrow="ALWAYS">
            <!-- Tiêu đề -->
            <Label styleClass="main-title" text="Thông Tin Nhân Viên" />

            <!-- Form thông tin nhân viên -->
            <VBox prefHeight="652.0" prefWidth="480.0" spacing="15" styleClass="info-form-section">
                <GridPane hgap="20" styleClass="info-grid" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>

                    <!-- Hàng 1: Mã nhân viên -->
                    <Label styleClass="form-label" text="Mã Nhân Viên:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label styleClass="form-value" text="NV0001" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Hàng 2: Tên nhân viên -->
                    <Label styleClass="form-label" text="Tên Nhân Viên:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField styleClass="form-input" text="Trần Ngọc Oanh" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Hàng 3: SDT -->
                    <Label styleClass="form-label" text="SDT:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField styleClass="form-input" text="0398765432" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Hàng 4: Ngày sinh -->
                    <Label styleClass="form-label" text="Ngày Sinh:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField styleClass="form-input" text="1/5/2005" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Hàng 5: Giới tính -->
                    <Label styleClass="form-label" text="Giới Tính:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <RadioButton styleClass="gender-radio" text="Nam">
                            <toggleGroup>
                                <ToggleGroup fx:id="genderGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton selected="true" styleClass="gender-radio" text="Nữ" toggleGroup="$genderGroup" />
                    </HBox>

                    <!-- Hàng 6: Ngày vào làm -->
                    <Label styleClass="form-label" text="Ngày Vào Làm:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField styleClass="form-input" text="20-6-2025" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <!-- Hàng 7: Chức vụ -->
                    <Label styleClass="form-label" text="Chức Vụ:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <ComboBox promptText="Chọn chức vụ" styleClass="form-combo" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <!-- Hàng 8: Trạng thái -->
                    <Label styleClass="form-label" text="Trạng Thái:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="7">
                        <RadioButton selected="true" styleClass="status-radio" text="● Còn Làm">
                            <toggleGroup>
                                <ToggleGroup fx:id="statusGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton styleClass="status-radio" text="● Nghỉ Làm" toggleGroup="$statusGroup" />
