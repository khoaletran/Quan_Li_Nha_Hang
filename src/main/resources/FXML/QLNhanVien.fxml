<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="1400" styleClass="root-pane" stylesheets="@../CSS/qlnhanvien.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.QLNhanVienController">

    <!-- Nội dung chính ở giữa -->
    <center>
        <HBox spacing="20" styleClass="main-content" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="center-p" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <children>
                    <HBox alignment="CENTER" prefHeight="56.0" prefWidth="660.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 20;">
                        <TextField fx:id="txtTimKiem" layoutX="14.0" layoutY="7.0" prefHeight="40.0" prefWidth="577.0" promptText="Tìm nhân viên..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnThemNV" prefHeight="68.0" prefWidth="85.0" styleClass="add-btn" text="+" />
                    </HBox>

                    <!-- Scroll danh sách nhân viên -->
                    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" prefHeight="678.0" prefWidth="660.0" styleClass="scroll_order" VBox.vgrow="ALWAYS">
                        <content>
                            <FlowPane fx:id="menuFlow" alignment="CENTER" hgap="30" prefHeight="480" prefWidth="600" prefWrapLength="500" styleClass="menu-flowpane" vgap="30">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>
                            </FlowPane>
                        </content>
                    </ScrollPane>
                </children>
            </VBox>
        </HBox>
    </center>

    <!-- Phần bên phải: Thông tin chi tiết nhân viên -->
    <right>
        <VBox prefWidth="480" spacing="20" styleClass="employee-details-section" HBox.hgrow="ALWAYS">
            <!-- Tiêu đề -->
            <Label prefHeight="64.0" prefWidth="424.0" styleClass="main-title" text="Thông Tin Nhân Viên" />

            <!-- Form thông tin -->
            <VBox prefHeight="652.0" prefWidth="480.0" spacing="15" styleClass="info-form-section">
                <GridPane hgap="20" styleClass="info-grid" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>

                    <!-- Mã nhân viên -->
                    <Label styleClass="form-label" text="Mã Nhân Viên:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="lblMaNV" styleClass="form-value" text="--" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Tên nhân viên -->
                    <Label styleClass="form-label" text="Tên Nhân Viên:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtTenNV" promptText="Nhập tên nhân viên" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- SDT -->
                    <Label styleClass="form-label" text="SĐT:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtSDT" promptText="Nhập số điện thoại" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Ngày sinh -->
<!--                    <Label styleClass="form-label" text="Ngày Sinh:"-->
<!--                           GridPane.columnIndex="0" GridPane.rowIndex="3" />-->
<!--                    <TextField fx:id="txtNgaySinh"-->
<!--                               styleClass="form-input"-->
<!--                               promptText="dd/mm/yyyy"-->
<!--                               GridPane.columnIndex="1" GridPane.rowIndex="3" />-->

                    <!-- Giới tính -->
                    <Label styleClass="form-label" text="Giới Tính:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <RadioButton fx:id="rdoNam" styleClass="gender-radio" text="Nam" />
                        <RadioButton fx:id="rdoNu" styleClass="gender-radio" text="Nữ" />
                    </HBox>

                    <!-- Ngày vào làm -->
                    <Label styleClass="form-label" text="Ngày Vào Làm:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="txtNgayVaoLam" promptText="yyyy-mm-dd" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <!-- Chức vụ -->
                    <Label styleClass="form-label" text="Chức Vụ:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <ComboBox fx:id="comboChucVu" promptText="Chọn chức vụ" styleClass="form-combo" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <!-- Trạng thái -->
                    <Label styleClass="form-label" text="Trạng Thái:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="7">
                        <RadioButton fx:id="rdoConLam" styleClass="status-radio" text="Còn Làm" />
                        <RadioButton fx:id="rdoNghiLam" styleClass="status-radio" text="Nghỉ Làm" />
                    </HBox>

                    <Label layoutX="10.0" layoutY="369.0" styleClass="form-label" text="Đổi Mật Khẩu :" GridPane.rowIndex="8" />
                    <TextField fx:id="txtMatKhau" layoutX="153.0" layoutY="69.0" promptText="Nhập Mật Khẩu" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                    <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" />
               </rowConstraints>
                </GridPane>
            </VBox>

            <!-- Nút hành động -->
            <HBox spacing="10" styleClass="right-action-buttons">
                <Button fx:id="btnXacNhan" styleClass="confirm-btn" text="Xác Nhận" />
<!--                <Button fx:id="btnXoa" styleClass="delete-btn" text="Xoá" />-->
            </HBox>
        </VBox>
    </right>
</BorderPane>
