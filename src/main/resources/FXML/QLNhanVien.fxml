<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800" prefWidth="1400"
            fx:controller="ui.controllers.QLNhanVienController"
            styleClass="root-pane"
            stylesheets="@../CSS/qlnhanvien.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- Nội dung chính ở giữa -->
    <center>
        <HBox spacing="20" styleClass="main-content" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <VBox prefHeight="760.0" prefWidth="916.0" styleClass="center-p" VBox.vgrow="ALWAYS">
                <children>
                    <HBox alignment="CENTER" prefHeight="56.0" prefWidth="660.0" spacing="10"
                          style="-fx-background-color: white; -fx-background-radius: 20;">
                        <TextField fx:id="txtTimKiem"
                                   layoutX="14.0" layoutY="7.0"
                                   prefHeight="40.0" prefWidth="577.0"
                                   promptText="Tìm nhân viên..."
                                   styleClass="search-field"
                                   HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Scroll danh sách nhân viên -->
                    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true"
                                prefHeight="678.0" prefWidth="660.0"
                                styleClass="scroll_order"
                                VBox.vgrow="ALWAYS">
                        <content>
                            <FlowPane fx:id="menuFlow"
                                      alignment="CENTER"
                                      hgap="30" vgap="30"
                                      prefWidth="600"
                                      prefHeight="480"
                                      prefWrapLength="500"
                                      styleClass="menu-flowpane">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>
                            </FlowPane>
                        </content>
                    </ScrollPane>
                </children>
            </VBox>
        </HBox>
    </center>

    <!-- Phần bên phải: Thông tin chi tiết nhân viên -->
    <right>
        <VBox prefWidth="480" spacing="20"
              styleClass="employee-details-section"
              HBox.hgrow="ALWAYS">
            <!-- Tiêu đề -->
            <Label prefHeight="64.0" prefWidth="424.0"
                   styleClass="main-title"
                   text="Thông Tin Nhân Viên" />

            <!-- Form thông tin -->
            <VBox prefHeight="652.0" prefWidth="480.0" spacing="15"
                  styleClass="info-form-section">
                <GridPane hgap="20" vgap="15" styleClass="info-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>

                    <!-- Mã nhân viên -->
                    <Label styleClass="form-label" text="Mã Nhân Viên:"
                           GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="lblMaNV"
                           styleClass="form-value"
                           text="--"
                           GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Tên nhân viên -->
                    <Label styleClass="form-label" text="Tên Nhân Viên:"
                           GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtTenNV"
                               styleClass="form-input"
                               promptText="Nhập tên nhân viên"
                               GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- SDT -->
                    <Label styleClass="form-label" text="SĐT:"
                           GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtSDT"
                               styleClass="form-input"
                               promptText="Nhập số điện thoại"
                               GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Ngày sinh -->
                    <Label styleClass="form-label" text="Ngày Sinh:"
                           GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="txtNgaySinh"
                               styleClass="form-input"
                               promptText="dd/mm/yyyy"
                               GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Giới tính -->
                    <Label styleClass="form-label" text="Giới Tính:"
                           GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <RadioButton fx:id="rdoNam" text="Nam" styleClass="gender-radio" />
                        <RadioButton fx:id="rdoNu" text="Nữ" styleClass="gender-radio" />
                    </HBox>

                    <!-- Ngày vào làm -->
                    <Label styleClass="form-label" text="Ngày Vào Làm:"
                           GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="txtNgayVaoLam"
                               styleClass="form-input"
                               promptText="yyyy-mm-dd"
                               GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <!-- Chức vụ -->
                    <Label styleClass="form-label" text="Chức Vụ:"
                           GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <ComboBox fx:id="comboChucVu"
                              promptText="Chọn chức vụ"
                              styleClass="form-combo"
                              GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <!-- Trạng thái -->
                    <Label styleClass="form-label" text="Trạng Thái:"
                           GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="7">
                        <RadioButton fx:id="rdoConLam" text="Còn Làm" styleClass="status-radio" />
                        <RadioButton fx:id="rdoNghiLam" text="Nghỉ Làm" styleClass="status-radio" />
                    </HBox>
                </GridPane>
            </VBox>

            <!-- Nút hành động -->
            <HBox styleClass="right-action-buttons" spacing="10">
                <Button fx:id="btnXacNhan"
                        styleClass="confirm-btn"
                        text="Xác Nhận" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnXoa"
                        styleClass="delete-btn"
                        text="Xoá" />
            </HBox>
        </VBox>
    </right>
</BorderPane>
