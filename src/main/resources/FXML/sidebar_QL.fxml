<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.ImagePattern?>
<?import javafx.scene.shape.Circle?>

<BorderPane prefWidth="322.0"
            styleClass="sidebar"
            stylesheets="@../CSS/sidebar.css"
            fx:controller="ui.controllers.SidebarController_QL"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- 🔹 Phần trên cùng (Avatar + tên + vai trò) -->
    <top>
        <VBox spacing="10">
            <!-- Avatar -->
            <HBox alignment="CENTER" spacing="15" styleClass="avatar_section">
                <children>
                    <StackPane alignment="CENTER">
                        <Circle fx:id="avatarCircle" fill="#f0f0f0" radius="57" stroke="#cccccc" strokeWidth="2" />
                        <Circle radius="55">
                            <fill>
                                <ImagePattern>
                                    <image>
                                        <Image url="@../IMG/avatar.png" />
                                    </image>
                                </ImagePattern>
                            </fill>
                        </Circle>
                    </StackPane>
                    <VBox alignment="CENTER_LEFT" spacing="5">
                        <Label fx:id="lblTenNV" styleClass="username" text="Tên nhân viên" />
                        <Label fx:id="lblChucVu" styleClass="role" text="Chức vụ" />
                    </VBox>
                </children>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding: 10;">
            <Button fx:id="btnDashboard" onAction="#handleMenuAction" styleClass="menu-item" text="⚙ DASHBOARD" />
            <Button fx:id="btnQLMenu" onAction="#handleMenuAction" styleClass="menu-item" text="⚙ QUẢN LÍ MENU" />
            <Button fx:id="btnQLBan" onAction="#handleMenuAction" styleClass="menu-item" text="⚙ QUẢN LÍ BÀN" />
            <Button fx:id="btnQLNhanVien" onAction="#handleMenuAction" styleClass="menu-item" text="⚙ QUẢN LÍ NHÂN VIÊN" />
            <Button fx:id="btnQLKhuyenMai" onAction="#handleMenuAction" styleClass="menu-item" text="⚙ QUẢN LÍ KHUYẾN MÃI" />
            <Button fx:id="btnQLChinhSach" onAction="#handleMenuAction" styleClass="menu-item" text="⚙ QUẢN LÍ CHÍNH SÁCH" />
            <Button fx:id="btnThongKe" onAction="#handleMenuAction" styleClass="menu-item" text="⚙ THỐNG KÊ" />
            <Button fx:id="btnHoTro" onAction="#handleMenuAction" styleClass="menu-item" text="⚙ HỖ TRỢ" />
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" style="-fx-padding: 20 0 25 0;">
            <Button fx:id="btnDangXuat" onAction="#handleMenuAction" prefWidth="185" styleClass="logout-btn" text="Đăng Xuất" />
        </VBox>
    </bottom>
</BorderPane>
