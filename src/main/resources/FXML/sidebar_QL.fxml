<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" styleClass="sidebar" stylesheets="@../CSS/sidebar_QL.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="20" left="12" right="12" top="20" />
    </padding>
   <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />

    <Label styleClass="sidebar-name" text="Đỗ Minh Quân" />
    <Label styleClass="sidebar-role" text="Quản lí" />

    <Button onAction="#handleDashboard" styleClass="sidebar-btn" text="DASHBOARD" />
    <Button onAction="#handleMenu" styleClass="sidebar-btn" text="QUẢN LÍ MENU" />
    <Button onAction="#handleTable" styleClass="sidebar-btn" text="QUẢN LÍ BÀN" />
    <Button onAction="#handleStaff" styleClass="sidebar-btn" text="QUẢN LÍ NHÂN VIÊN" />
    <Button styleClass="sidebar-btn" text="KHUYẾN MÃI" />
    <Button styleClass="sidebar-btn" text="CHÍNH SÁCH" />
    <Button styleClass="sidebar-btn" text="THỐNG KÊ" />
    <Button styleClass="sidebar-btn" text="HỖ TRỢ" />

    <Region VBox.vgrow="ALWAYS" />

    <Button onAction="#handleLogout" styleClass="logout-btn" text="Đăng Xuất" />
</VBox>
