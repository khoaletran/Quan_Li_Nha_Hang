<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<BorderPane prefWidth="322" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.controllers.SidebarController_NV"
            styleClass="sidebar">

    <!-- Phần trên cùng -->
    <top>
        <VBox spacing="10">
            <!-- Avatar -->
            <HBox styleClass="avatar_section">
                <children>
                    <ImageView fitHeight="115" fitWidth="115" preserveRatio="true">
                        <image>
                            <Image url="@../IMG/avatar.png" />
                        </image>
                    </ImageView>
                    <VBox alignment="CENTER">
                        <children>
                            <Label styleClass="username" text="Đỗ Minh Quân"/>
                            <Label styleClass="role" text="Quản Lí"/>
                        </children>
                    </VBox>
                </children>
            </HBox>
        </VBox>
    </top>

    <!-- Phần menu chính -->
    <center>
        <VBox fx:id="menuContainer" spacing="8" alignment="TOP_CENTER">
            <Button styleClass="menu-item" text="  ⚙  DASHBOARD"/>
            <Button fx:id="btnQuanLiDatBan" onAction="#toggleSubMenu"
                    styleClass="menu-item" text="  ⚙  QUẢN LÍ ĐẶT BÀN"/>

            <!-- Submenu -->
            <VBox fx:id="subMenuDatBan" alignment="CENTER" spacing="5"
                  visible="false" managed="false">
                <Button styleClass="sub-btn" text="Đặt Bàn"/>
                <Button styleClass="sub-btn" text="Check In"/>
                <Button styleClass="sub-btn" text="Check Out"/>
                <Button styleClass="sub-btn" text="Cập Nhật Đơn Bàn"/>
            </VBox>

            <Button styleClass="menu-item" text="  ⚙  QUẢN LÍ THÀNH VIÊN"/>
            <Button styleClass="menu-item" text="  ⚙  TRA CỨU"/>
            <Button styleClass="menu-item" text="  ⚙  HỖ TRỢ"/>
        </VBox>
    </center>

    <!-- Nút cố định dưới cùng -->
    <bottom>
        <VBox alignment="CENTER" style="-fx-padding: 15 0 20 0;">
            <Button prefWidth="185" styleClass="logout-btn" text="Kết Ca"/>
        </VBox>
    </bottom>

</BorderPane>

