<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="sidebar" prefHeight="1000" prefWidth="322.0"
      styleClass="sidebar"
      stylesheets="@../CSS/sidebar_QL.css"
      fx:controller="ui.controllers.SidebarController_NV"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1">
    <HBox prefHeight="100.0" prefWidth="334.0" styleClass="avatar_section">
        <children>
            <ImageView fitHeight="115" fitWidth="115" preserveRatio="true">
                <image>
                    <Image url="@../IMG/avatar.png" />
                </image>
            </ImageView>

            <!-- Phần avatar + thông tin -->
            <VBox alignment="CENTER">
                <children>
                    <Label styleClass="username" text="Đỗ Minh Quân" />
                    <Label styleClass="role" text="Quản Lí" />
                </children>
            </VBox>
        </children>
    </HBox>

    <!-- Nút menu -->
    <Button text="DASHBOARD" styleClass="menu-item"/>
    <Button fx:id="btnQuanLiDatBan" text="QUẢN LÍ ĐẶT BÀN" styleClass="menu-item" onAction="#toggleSubMenu"/>
    <VBox fx:id="subMenuDatBan" spacing="5" visible="false" managed="false" style="-fx-padding: 0 0 0 20;">
        <Button text="Đặt Bàn" styleClass="sub-btn"/>
        <Button text="Check In" styleClass="sub-btn"/>
        <Button text="Check Out" styleClass="sub-btn"/>
        <Button text="Cập Nhật Đơn Bàn" styleClass="sub-btn"/>
    </VBox>
    <Button text="QUẢN LÍ THÀNH VIÊN" styleClass="menu-item"/>
    <Button text="TRA CỨU" styleClass="menu-item"/>
    <Button text="HỖ TRỢ" styleClass="menu-item"/>

    <Region prefHeight="70.0" prefWidth="319.0" />

    <!-- Đăng xuất -->
    <Button prefWidth="185.0" styleClass="logout-btn" text="Đăng Xuất" />
</VBox>
