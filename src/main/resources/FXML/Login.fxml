<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="1000" prefHeight="600" styleClass="root">

    <HBox prefWidth="1000" prefHeight="600">
        <!-- Vùng logo bên trái -->
        <VBox alignment="CENTER" prefWidth="400" styleClass="left-card">
            <ImageView fitWidth="180" fitHeight="180" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../IMG/logo_1.png"/>
                </image>
            </ImageView>

            <Label text="CRABKING" styleClass="logo-title"/>
            <Label text="RESTAURANT" styleClass="logo-sub"/>
            <Button text="Hệ thống nhà hàng CrabKing" styleClass="sub-button"/>
        </VBox>

        <!-- Vùng đăng nhập bên phải -->
        <VBox alignment="CENTER_LEFT" prefWidth="600" spacing="20" styleClass="right-card">
            <padding><Insets left="70" right="70"/></padding>

            <Label text="ĐĂNG NHẬP" styleClass="title"/>

            <VBox spacing="10" style="-fx-pref-width: 400;">
                <Label text="Tên đăng nhập"/>
                <TextField promptText="Nhập tên đăng nhập" styleClass="input"/>
            </VBox>

            <VBox spacing="10" style="-fx-pref-width: 400;">
                <Label text="Mật khẩu"/>
                <PasswordField promptText="Nhập mật khẩu" styleClass="input"/>
            </VBox>

            <Hyperlink text="Quên mật khẩu?" styleClass="forgot-link"/>

            <Button text="Đăng nhập" styleClass="login-btn"/>
        </VBox>
    </HBox>
</AnchorPane>
