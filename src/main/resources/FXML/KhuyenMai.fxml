                    <ComboBox fx:id="cbUuDaiTimKiem" prefHeight="19.0" prefWidth="720.0" promptText="-- chọn --" styleClass="uudai_combobox filter-tf" GridPane.columnIndex="1" GridPane.rowIndex="2" />
