                <Label prefHeight="15.0" prefWidth="106.0" styleClass="green-bold-label" text="40.000 đ" GridPane.columnIndex="4" />
            </GridPane>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <AnchorPane prefHeight="78.0" prefWidth="356.0" />
               <HBox prefHeight="100.0" prefWidth="200.0">
