                                  <Button styleClass="time-btn" text="🕒" />
                              </HBox>
                              <HBox fx:id="hboxHoaDon" alignment="CENTER" spacing="15" styleClass="invoice-card">
                                  <ImageView fitHeight="60" fitWidth="100" preserveRatio="true">
                                      <image>
                                          <Image url="@../IMG/ban1.png" />
                                      </image>
                                  </ImageView>
                                  <VBox>
                                      <Label styleClass="invoice-id" text="HD1210820250002" />
                                      <AnchorPane prefHeight="10.0" prefWidth="200.0" />
                                      <Label styleClass="invoice-phone" text="SĐT: 0398765432" />
                                  </VBox>
                                  <Region HBox.hgrow="ALWAYS" />
                                  <Button styleClass="time-btn" text="🕒" />
                              </HBox>



                          </VBox>
                  </content>
                  </ScrollPane>
            </children>
         </VBox>
         <VBox prefHeight="387.0" prefWidth="653.0" style="-fx-background-color: #EFEFEF; -fx-background-radius: 20 20 28 28">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10" styleClass="detail_box">
                  <children>
                     <Label prefHeight="13.0" prefWidth="40.0" style="-fx-font-weight: bold" text="STT" />
                     <Label style="-fx-font-weight: bold" text="TÊN MÓN" />
                     <Label style="-fx-font-weight: bold" text="SỐ LƯỢNG" />
                     <Label style="-fx-font-weight: bold" text="ĐƠN GIÁ" />
                     <Label prefHeight="18.0" prefWidth="135.0" style="-fx-font-weight: bold" text="KHUYẾN MÃI" />
                     <Label style="-fx-font-weight: bold" text="THÀNH TIỀN" />
                  </children>
               </HBox>

                  <!-- Danh sách món ăn -->
                <ScrollPane fx:id="menuScroll" fitToWidth="true" prefHeight="387.0" prefWidth="653.0" styleClass="menu-scroll" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="vboxMenu" spacing="10" styleClass="menu-list" VBox.vgrow="ALWAYS">
                            <HBox fx:id="hboxMenu" alignment="CENTER_LEFT" spacing="10" styleClass="menu-row">
                                <Label styleClass="col-stt" text="1" />
                                <Label styleClass="col-name" text="Cua Cà Mau" />
                                <Label styleClass="col-qty" text="2" />
                                <Label styleClass="col-price" text="200.000 đ" />
                                <Label styleClass="col-discount" text="10%" />
                                <Label styleClass="col-total" text="400.000 đ" />
                            </HBox>
                        </VBox>
                    </content>
                </ScrollPane>
               <AnchorPane prefHeight="89.0" prefWidth="653.0" />
            </children>
         </VBox>
        </VBox>
