                                  <Insets bottom="10" left="10" right="10" top="10" />
                              </padding>


                                 <!-- Thẻ hóa đơn -->
                              <HBox alignment="CENTER" spacing="15" styleClass="invoice-card">
                                  <ImageView fitHeight="60" fitWidth="100" preserveRatio="true">
