         <VBox prefHeight="353.0" prefWidth="653.0" styleClass="top">
            <children>

                  <!-- Ô tìm kiếm -->
                  <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search_box">
                      <TextField fx:id="searchField" prefHeight="47.0" prefWidth="540.0" promptText="Tìm kiếm: số điện thoại, bàn, hóa đơn" styleClass="search-field" />
